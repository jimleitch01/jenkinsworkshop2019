pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building.. for ERV'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy for ERV') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}

